<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %> (<%= "DRAFT" if post.draft? %><%= "SCHEDULED" if post.scheduled? %>)
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>



  <p>
    <strong>Author:</strong>
    <%= post.author.email %>
  </p>

</div>
